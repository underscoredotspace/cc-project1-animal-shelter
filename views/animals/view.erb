<table class="single-view">
  <tr>
    <td>Admission Date</td>
    <td><%=@animal.admission_date%></td>
  </tr>
  <tr>
    <td>Type</td>
    <td><%=@animal.type%></td>
  </tr>
  <tr>
    <td>Breed</td>
    <td><%=@animal.breed%></td>
  </tr>
  <% if !@owner %>
  <tr>
    <td>Adoptable</td>
    <td class="centered"><%='âœ…' if @animal.adoptable%></td>
  </tr>
  <% end %>
  <% if @owner %>
  <tr>
    <td>Owner</td>
    <td><a href="/customers/<%=@owner.id%>"><%=@owner.name%></a></td>
  </tr>
  <tr>
    <td>Owner Email</td>
    <td><%= @owner.email %></td>
  </tr>
  <% end %>
</table>
  
<hr>

<p><a href="/animals/<%=@animal.id%>/edit">Edit animal</a></p>
<% if @animal.adoptable && !@owner %>
  <p><a href="/animals/<%=@animal.id%>/adopt">Add Adoption</a></p>
<% end %>