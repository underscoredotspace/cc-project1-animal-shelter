<form action="/customers/<%=@customer.id%>/adopt/<%=@animal.id%>" method="post">
<table class="single-view">
    <tr>
      <td>Name</td>
      <td><%=@customer.name%></td>
    </tr>
    <tr>
      <td>Email</td>
      <td><%=@customer.email%></td>
    </tr>
  </table>

  <hr>

  <table class="single-view">
      <tr>
          <td>Name</td>
          <td><%=@animal.name%></td>
        </tr>
    <tr>
      <td>Admission Date</td>
      <td><%=@animal.admission_date%></td>
    </tr>
    <tr>
      <td>Type</td>
      <td><%=@animal.type%></td>
    </tr>
    <tr>
      <td>Breed</td>
      <td><%=@animal.breed%></td>
    </tr>
  </table>
  
  <hr>

  <button type="submit">Confirm Adoption</button>
</form>